<Window x:Class="Compiler.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="650" Width="1120">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="617*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="593*"/>
        </Grid.RowDefinitions>
        <Menu Height="30" VerticalAlignment="Top" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <MenuItem Header="Compile" Command="{Binding CompileCommand}"/>
            <MenuItem Header="Load" Command="{Binding LoadFileCommand}"/>
        </Menu>
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <GroupBox Header="Source code" >
                <StackPanel>
                    <TextBlock Height="500" Text="{Binding Code}" Foreground="#FF7ABD7A" FontWeight="Bold"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="10">
            <GroupBox Header="Output" >
                <StackPanel Orientation="Horizontal">
                    <GroupBox Header="Key words">
                        <ListBox Height="400" Width="150" ItemsSource="{Binding KeyWords}"/>
                    </GroupBox>
                    <GroupBox Header="Special characters">
                        <ListBox Height="400" Width="150" ItemsSource="{Binding SpecialCharacters}"/>
                    </GroupBox>
                    <GroupBox Header="Functions">
                        <ListBox Height="400" Width="150" ItemsSource="{Binding Functions}"/>
                    </GroupBox>
                    <GroupBox Header="Veriables">
                        <ListBox Height="400" Width="150" ItemsSource="{Binding Veriables}"/>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>

</Window>
