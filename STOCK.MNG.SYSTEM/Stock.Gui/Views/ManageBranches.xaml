<controls:MetroWindow x:Class="Stock.Gui.Views.ManageBranches"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stock.Gui.Views"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"  BorderBrush="#293955" BorderThickness="1"
             Height="300" Width="300" Closing="ManageBranches_OnClosing">
    <Grid >
        <DockPanel LastChildFill="True">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <TextBlock  VerticalAlignment="Top" Margin="10">Enter branch name</TextBlock>
                <TextBox VerticalAlignment="Top" Margin="5" Text="{Binding Name}" Width="150" Height="24"></TextBox>
            </StackPanel>
            <Button Width="60" Height="24" Command="{Binding AddBranchCommand}">add</Button>
        </DockPanel>
    </Grid>
</controls:MetroWindow>

